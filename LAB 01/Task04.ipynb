    "\n",
    "def calculateSalary(salary):\n",
    "    HRA = 0.10 * salary\n",
    "    DA = 0.05 * salary\n",
    "\n",
    "    return salary + HRA + DA\n",
    "\n",
    "salary = float(input(\"Enter the basic salary: \"))\n",
    "totalSalary = calculateSalary(salary)\n",
    "print(f\"Total salary is: {totalSalary}\")\n"
   ]
